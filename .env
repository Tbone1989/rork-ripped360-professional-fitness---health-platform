# Backend API Base URL - Auto-detected in development
EXPO_PUBLIC_RORK_API_BASE_URL=http://localhost:3000

# =============================================================================
# PRIMARY API KEYS - REQUIRED FOR FULL FUNCTIONALITY
# =============================================================================

# Rip360 API Keys (Primary - Replace with your actual keys)
EXPO_PUBLIC_RIP360_NINJA_API_KEY=your_rip360_ninja_api_key_here
EXPO_PUBLIC_RIP360_NUTRITION_API_KEY=your_rip360_nutrition_api_key_here
EXPO_PUBLIC_RIP360_HEALTH_FDA_API_KEY=your_rip360_health_fda_api_key_here

# =============================================================================
# ALTERNATIVE API KEYS - FALLBACK OPTIONS
# =============================================================================

# API Ninjas - Free tier available (https://api.api-ninjas.com/)
EXPO_PUBLIC_API_NINJAS_KEY=your_api_ninjas_key_here

# Edamam Food Database - Free tier available (https://developer.edamam.com/)
EXPO_PUBLIC_EDAMAM_APP_ID=your_edamam_app_id_here
EXPO_PUBLIC_EDAMAM_APP_KEY=your_edamam_app_key_here

# USDA FoodData Central - Free (https://fdc.nal.usda.gov/api-guide.html)
EXPO_PUBLIC_USDA_API_KEY=your_usda_api_key_here

# Google Places API - For location services (https://developers.google.com/places/web-service)
EXPO_PUBLIC_GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# =============================================================================
# CUSTOM API ENDPOINTS (Optional)
# =============================================================================

# Custom API endpoints (if different from default)
EXPO_PUBLIC_NINJA_API_URL=https://api.api-ninjas.com/v1
EXPO_PUBLIC_NUTRITION_API_URL=https://api.edamam.com/api/food-database/v2
EXPO_PUBLIC_FDA_API_URL=https://api.fda.gov

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Set to 'true' to force mock data even with API keys (for testing)
EXPO_PUBLIC_FORCE_MOCK_DATA=false

# Enable detailed API logging
EXPO_PUBLIC_DEBUG_API=true