{
  "expo": {
    "name": "Ripped360 Professional Fitness & Health",
    "slug": "rork-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "icon": "./assets/icon.png",
    "scheme": "ripped360",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ripped360.health",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Ripped360 to access your photos",
        "NSCameraUsageDescription": "Allow Ripped360 to access your camera",
        "NSMicrophoneUsageDescription": "Allow Ripped360 to access your microphone",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Ripped360 to use your location",
        "NSLocationWhenInUseUsageDescription": "Allow Ripped360 to use your location"
      }
    },
    "android": {
      "package": "com.ripped360.health",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#000000"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "VIBRATE",
        "INTERNET"
      ],
      "notification": {
        "color": "#ffffff",
        "sound": true,
        "defaultChannel": "default"
      }
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#ffffff",
          "defaultChannel": "custom",
          "sounds": ["./assets/notification_sound.wav"]
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Ripped360 to access your photos"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Ripped360 to access your camera",
          "microphonePermission": "Allow Ripped360 to access your microphone"
        }
      ],
      [
        "expo-location",
        {
          "isAndroidForegroundServiceEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "isIosBackgroundLocationEnabled": true
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Ripped360 to access your microphone"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "rork-app-001"
      },
      "apiUrl": "https://ripped360-professional-fitness-health.rork.app"
    }
  }
}
