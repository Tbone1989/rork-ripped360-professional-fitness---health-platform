{
  "expo": {
    "name": "Rip360 Fitness Pro",
    "slug": "rip360-fitness-pro",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "sdkVersion": "54.0.0",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.rork.app",
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Allow Rork App to access your photos.",
        "NSCameraUsageDescription": "Allow Rork App to access your camera.",
        "NSMicrophoneUsageDescription": "Allow Rork App to access your microphone.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Rork App to use your location.",
        "NSLocationWhenInUseUsageDescription": "Allow Rork App to use your location.",
        "UIBackgroundModes": [
          "location",
          "audio"
        ],
        "NSLocationAlwaysUsageDescription": "Allow $(PRODUCT_NAME) to use your location."
      }
    },
    "android": {
      "package": "com.rork.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.VIBRATE",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.SCHEDULE_EXACT_ALARM",
        "INTERNET"
      ],
      "notification": {
        "color": "#ffffff",
        "defaultChannel": "custom"
      }
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./local/assets/notification_icon.png",
          "color": "#ffffff",
          "defaultChannel": "custom",
          "sounds": [
            "./local/assets/notification_sound.wav"
          ],
          "enableBackgroundRemoteNotifications": false
        }
      ],
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos so you can share them with friends."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Rork App to access your camera.",
          "microphonePermission": "Allow Rork App to access your microphone.",
          "recordAudioAndroid": true
        }
      ],
      [
        "expo-location",
        {
          "isAndroidForegroundServiceEnabled": true,
          "isAndroidBackgroundLocationEnabled": true,
          "isIosBackgroundLocationEnabled": true,
          "locationAlwaysAndWhenInUsePermission": "Allow Rork App to use your location."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "Allow Rork App to access your microphone."
        }
      ]
    ],
    "assetBundlePatterns": [
      "assets/**"
    ],
    "extra": {
      "eas": {
        "projectId": "rork-app-2025"
      }
    }
  }
}